<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:color="@color/colorConsoleHeaderBackground">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textview_console_header_debug"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorConsoleHeaderEnableText"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="@string/view_console_header_counter"
            android:drawableStart="@drawable/header_icon_debug"/>
        <Space
            android:layout_width="10dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/textview_console_header_warn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorConsoleHeaderEnableText"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="@string/view_console_header_counter"
            android:drawableStart="@drawable/header_icon_warn"/>
        <Space
            android:layout_width="10dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/textview_console_header_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorConsoleHeaderEnableText"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="@string/view_console_header_counter"
            android:drawableStart="@drawable/header_icon_error"/>
        <Space
            android:layout_width="10dp"
            android:layout_height="match_parent"/>
    </LinearLayout>

</merge>